<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Zadanie 2</title>
  <link rel="stylesheet" href="../static/style.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet" />
</head>

<body>
  <header>
        <nav>
            <ul>
                <li id="decrypt_menu_button">
                    <a href="./decrypt" >Decrypt</a>
                </li>
                <li id="encrypt_menu_button">
                    <a href="./encrypt" >Encrypt</a>
                </li>
            </ul>
        </nav>
    </header>
  <div class="center">
    <div class="title">
      {% if mode == 'decrypt' %}
      <h1>Dešifrovanie súborov</h1>
      <script>document.getElementById("decrypt_menu_button").classList.add("selected")</script>
      {% else %}
      <h1>Šifrovanie súborov<h1>
      <script>document.getElementById("encrypt_menu_button").classList.add("selected")</script>
      {% endif %}
      <h3>symetrickým kľúčom K</h3>
      {% for mesg in get_flashed_messages() %}
        <script>alert('{{mesg}}');</script>
      {% endfor %}
    </div>
    <section>
      <form method=post enctype=multipart/form-data>
        <input type=file name=file multiple>
        <input type=submit value=Upload>
        <input type="submit" name="open" value="Generate RSA keys">
        
      </form>
    </section>
  </div>
</body>

</html>